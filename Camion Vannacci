package it.elis.java;

public class Camion extends Veicolo{
	private int luci;
	private String colore;
	
	public Camion(String nome, String marca, double cilindrata, int luci, String colore) {
		super(nome,marca,cilindrata);
		setLuci(luci);
		setColore(colore);
	}

	public int getLuci() {
		return luci;
	}

	public String getColore() {
		return colore;
	}

	public void setLuci(int luci) {
		this.luci = luci;
	}

	public void setColore(String colore) {
		this.colore = colore;
	}
	
	public String toString() {
		return super.toString() + " " + getLuci() + " " + getColore();
	}
}
